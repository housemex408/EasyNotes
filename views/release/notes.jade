extends ../layout
block content
    div(class='navbar navbar-inverse navbar-fixed-top', role='navigation')
        div.container
            div.navbar-header
    div.jumbotron
        div.container
            div.starter-template
                h2= version
            h3 Stories
            ul.issues
                for story in stories
                    li
                        a(href=story.self)= '[' + story.key + ']'
                        span= story.fields.summary
            h3 Chores
            ul.issues
                for chore in chores
                    li
                        a(href=chore.self)= '[' + chore.key + ']'
                        span= chore.fields.summary
            h3 Bugs
            ul.issues
                for bug in bugs
                    li
                        a(href=bug.self)= '[' + bug.key + ']'
                        span= bug.fields.summary